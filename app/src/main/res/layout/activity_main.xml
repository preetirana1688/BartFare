<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backgrd2"
    tools:context=".MainActivity"
    android:padding="5dp"
    >

    <ImageView
    android:layout_marginTop="5dp"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_alignParentLeft="true"
    android:src="@drawable/d_logo"
    android:id="@+id/logo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="70px"
        android:id="@+id/textView"
        android:textColor="#08088A"
        android:background="@drawable/bart_logo"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/logo"
        android:gravity="center"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#FF0000"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Spinner
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:id="@+id/spinner1"
        android:backgroundTint="@color/dark_blue"
        android:background="@color/grey"
        android:popupBackground="@color/dark_blue"
        android:gravity="center_vertical"

        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:text="DESTINATION"
        android:textSize="16dp"
        android:id="@+id/desttxt"
        android:textStyle="bold|italic"
       android:layout_above="@+id/button"
        android:background="@color/dark_blue"
        android:textColor="@color/white"
        android:gravity="center_vertical|center"
        android:layout_toLeftOf="@+id/spinner2"
        android:layout_toStartOf="@+id/spinner2" />
    <Spinner
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:id="@+id/spinner2"
        android:backgroundTint="@color/dark_blue"
        android:background="@android:color/white"
        android:popupBackground="@color/dark_blue"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="200dp"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />



    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
       android:background="@drawable/calculate"
        android:id="@+id/button"
        android:onClick="open"
        android:layout_below="@+id/spinner2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69px" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:src = "@drawable/fingrer"
        android:id="@+id/point"
       android:layout_marginTop="8dp"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="100px"
        android:id="@+id/textView2"
        android:textColor="#F8FBEF"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90px" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src = "@drawable/images"
        android:layout_below="@+id/point"
     android:layout_marginLeft="50dp"
    android:layout_marginTop="5dp"

        />

<Button
    android:layout_width="150dp"
    android:layout_height="50dp"
    android:id="@+id/info"
    android:background="@drawable/button"
    android:layout_below="@+id/textView2"
    android:layout_marginTop="10dp"
    android:text="Station Info"
    android:textSize="20sp"
    android:textStyle="bold"

    android:clickable="true"
    android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:text="SOURCE"
        android:textSize="16dp"
        android:background="@color/dark_blue"
        android:textColor="@color/white"
        android:gravity="center_vertical|center"
        android:textStyle="bold|italic"
        android:id="@+id/textView3"
        android:layout_marginTop="140dp"
      />

</RelativeLayout>
